<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2><%= @task.title %></h2>
      <p><%= @task.details %></p>
      <div class="form-check">
        <%= check_box_tag "completed", 1, @task.completed, class: "form-check-input", disabled: true %>
        <label class="form-check-label" for="completed">
          <%= @task.completed ? "Completed" : "Incomplete" %>
        </label>
      </div>
      <div class="mt-3">
        <%= link_to 'Edit Task', edit_task_path(@task), class: "btn btn-primary mr-2" %>
        <%= link_to 'Return', tasks_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
